<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Let's Get Better</title>

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="http://localhost:3000/css/styles.css">

	<!-- VENDOR SCRIPTS -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.3/handlebars.min.js"></script>

	<!-- APPLICATION SCRIPTS -->
	<script src="http://localhost:3000/js/app.js"></script>
</head>
<body>
	<div class="jumbotron">
    <div class="container">
      <div id="user-Name">
        <h2>Alright {{userName}}</h2>
    	</div>
    		<h3>Let's take a look at {{cold.name}}</h3>
  	</div>
	</div>

  <section id='cold-form' class="container">
  <div class="row">
  <div class="col-md-10 col-md-offset-1">

    <form class="form-horizontal" id='new-cold'>
      <fieldset>

        <!-- Form Name -->
        <legend>Add New Cold</legend>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="name">Current Date</label>
          <div class="col-md-4">
          <input id="currentDate" name="currentDate" type="text" placeholder="mm-dd-year" class="form-control input-md" required="">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="dateStart">How do you feel? 1-10</label>
          <div class="col-md-4">
          <input id="feelScale" name="feelScale" type="text" placeholder="" class="form-control input-md">
          </div>
        </div>

        <!-- Text area-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="dateEnd">Symptons? (commas between please)</label>
          <div class="col-md-4">
          <textarea id="symptons" name="symptons" class="form-control">cough, soar-throat</textarea>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="dateStart">Vitamin Intake 1-10</label>
          <div class="col-md-4">
          <input id="vitamins" name="vitamins" type="text" placeholder="" class="form-control input-md">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="dateStart">Exercise</label>
          <div class="col-md-4">
          <input id="exercise" name="exercise" type="text" placeholder="Spin Class, Ran" class="form-control input-md">
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label" for="dateStart">Details</label>
          <div class="col-md-4">
          <input id="details" name="details" type="text" placeholder="Morning, feel crappy" class="form-control input-md">
          </div>
        </div>

        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="singlebutton">Create Log</label>
          <div class="col-md-4">
            <button id="singlebutton" name="singlebutton" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
  </div>
</section>

<section class="container">
	<div class="row">
  	<div class="col-md-10 col-md-offset-1">
    	<h2>Colds</h2>
  	</div>
	</div>
	<!-- User! -->
	<div id='colds-list'>
    <!-- handlebars template -->
 
      {{#each user.colds}}
      <li class="list-group-item cold" data-id="{{_id}}">
      <a href=""><strong>{{name}}</strong></a>
      <span>{{dateStart}} to {{dateEnd}}</span>
      {{/each}}

	</div>
</section>